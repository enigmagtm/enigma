{
  "name": "enigma-srcs",
  "version": "1.0.0",
  "description": "Enigma Framework for Node server aplications",
  "scripts": {
    "lint": "eslint packages/**/*.ts --fix",
    "test": "jest",
    "pack-core": "cd packages/core && npm pack",
    "install-core": "cd packages/core && npm i",
    "build-core": "cd packages/core && npm run build",
    "pack-orm": "cd packages/orm && npm pack",
    "install-orm": "cd packages/orm && npm i",
    "build-orm": "cd packages/orm && npm run build",
    "pack-http": "cd packages/http && npm pack",
    "install-http": "cd packages/http && npm i",
    "build-http": "cd packages/http && npm run build",
    "pack-rsc": "cd packages/resource && npm pack",
    "install-rsc": "cd packages/resource && npm i",
    "build-rsc": "cd packages/resource && npm run build",
    "install-all": "npm run install-core && npm run install-orm && npm run install-http && npm run install-rsc",
    "build-all": "npm run build-core && npm run build-orm && npm run build-http && npm run build-rsc",
    "pack-all": "npm run pack-core && npm run pack-orm && npm run pack-http && npm run pack-rsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enigmagtm/enigma.git"
  },
  "keywords": [
    "enigma"
  ],
  "author": "snakeful",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/enigmagtm/enigma/issues"
  },
  "homepage": "https://github.com/enigmagtm/enigma#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^37.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13"
  }
}